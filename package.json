{
  "name": "@nekzus/mcp-server",
  "version": "0.0.0-development",
  "description": "Personal MCP Server implementation providing extensible utility functions and tools for development and testing purposes",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mcp-server": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "jest --passWithNoTests",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "commit": "git-cz",
    "semantic-release": "semantic-release --branches main",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "mcp",
    "server",
    "typescript",
    "greetings",
    "cards",
    "games"
  ],
  "author": "nekzus",
  "license": "MIT",
  "directories": {
    "lib": "dist",
    "bin": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
      "dist",
      "README.md",
      "LICENSE"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Nekzus/mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/Nekzus/mcp-server/issues"
  },
  "homepage": "https://github.com/Nekzus/mcp-server#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.7.0",
    "dotenv": "16.4.7",
    "zod": "3.24.2"
  },
  "devDependencies": {
    "semantic-release": "^24.2.3",
    "cz-conventional-changelog": "3.3.0",
    "@types/jest": "29.5.14",
    "@types/node": "22.13.10",
    "@typescript-eslint/eslint-plugin": "8.27.0",
    "@typescript-eslint/parser": "8.27.0",
    "eslint": "9.22.0",
    "jest": "29.7.0",
    "prettier": "3.5.3",
    "ts-jest": "29.2.6",
    "tsx": "4.19.3",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": "^18.18.0 || ^20.9.0 || >=21.1.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}